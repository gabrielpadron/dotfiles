general {
  colors = true
  interval = 5
}

order += "disk /"
order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
# order += "battery 0"
order += "tztime local"

wireless _first_ {
  format_up = "W: %essid "
  format_down = "W: down"
}

ethernet _first_ {
  # format_up = "E: %ip (%speed)"
  format_up = "E: Connected"
  format_down = "E: down"
}

